@model Tweeter.Web.ViewModels.User.SimpleUserViewModel 
<div class="well">
    <div class="row">
        <div class="col-md-6">
            <h3>@Html.ActionLink(Model.UserName, "ShowProfile", "Users", new {id = Model.Id }, null)</h3>
        </div>
        <div class="col-md-6">
            <div>
                <b>Email: </b> @Model.Email
            </div>
            <div>
                <b>Full name: </b> @Model.FullName
            </div>
        </div>
    </div>
</div>
