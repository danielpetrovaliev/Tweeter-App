@model IEnumerable<Tweeter.Web.ViewModels.Tweet.TweetViewModel>

@if (Model.Any())
{
    foreach (var item in Model)
    {
        <div>
            <div>
                <b class="media-heading">
                    @Html.ActionLink(item.Author.UserName, "ShowProfile", "Users", new {id = item.AuthorId}, new {})
                </b>
                <i style="font-size: 8px;" class="glyphicon glyphicon-star"></i>
                <span>@item.CreatedOn</span>
            </div>
            <div>
                @item.Text
            </div>
            <hr />
        </div>
    }
}
else
{
    <div class="alert alert-danger">
        <h2>Nothing to show!</h2>
    </div>
}