@using PagedList.Mvc
@model PagedList.IPagedList<Tweeter.Web.ViewModels.User.SimpleUserViewModel>
@{
    Layout = "~/Views/Shared/_DefaultTweetsLayout.cshtml";
}

<div>
    @if (Model.Any())
    {
        @Html.DisplayForModel(Model)
    }
    else
    {
        <div class="well">
            <div class="row">
                <div class="col-md-10">
                    <h3>No Results!</h3>
                </div>
            </div>
        </div>
    }
</div>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
